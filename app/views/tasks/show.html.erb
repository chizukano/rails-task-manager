<h1><%= @task.title %></h1>
<h3><%= @task.details %></h3>

<% if @task.completed? == false %>
  <p>This task is not completed yet.</p>
<% else %>
  <p>This task is already completed!</p>
<% end %>

<p><%= link_to "Edit this task", edit_task_path%></p>
<p><%= link_to "Back to list", tasks_path%></p>
